<% layout('/layouts/boilerplate') %>

<h1>Campgrounds</h1>
<div>
  <a href="/campgrounds/new" class="btn btn-primary mb-3 mt-2"
    >Add a Campground</a
  >
</div>
<% campgrounds.forEach(element => { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= element.image %>" alt="" class="img-fluid" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= element.title %></h5>
        <p class="card-text"><%= element.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= element.location %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= element._id %>">
          View <%= element.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% }) %>
